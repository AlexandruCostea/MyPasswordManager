<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.alexcostea.passwordmanager.Controller.MainPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ListView fx:id="loginsView" onMouseClicked="#viewLogin"/>
    <HBox alignment="CENTER" spacing="40.0">
        <Button text="Add Login" onMouseClicked="#addLogin"/>
        <VBox alignment="CENTER" spacing="10.0">
            <Button text="Generate secure password" onMouseClicked="#generatePassword"/>
            <TextField fx:id="generatedPassword"/>
        </VBox>
    </HBox>
</VBox>
